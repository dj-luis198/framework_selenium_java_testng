<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelTests" parallel="classes" thread-count="1">
    <listeners>
        <listener class-name="com.demoqa.utils.listeners.MyListeners"/>
    </listeners>
    <test name="ChromeTestsDesktopChrome">
        <parameter name="browser" value="chrome" />
        <parameter name="deviceName" value="iPad" />
        <classes>
            <class name="com.demoqa.tests.buttons.ButtonTest" />
            <class name="com.demoqa.tests.home.HomeTest" />
        </classes>
    </test>
    <test name="ChromeTestsTabletChrome">
        <parameter name="browser" value="chrome" />
        <parameter name="deviceName" value="Pixel 2" />
        <classes>
            <class name="com.demoqa.tests.forms.FormsTest" />
            <class name="com.demoqa.tests.widgets.AccordianTest" />
        </classes>
    </test>
    <test name="ChromeTestsDesktopFirefox">
        <parameter name="browser" value="firefox" />
        <parameter name="deviceName" value="Pixel 2" />
        <classes>
            <class name="com.demoqa.tests.buttons.ButtonTest" />
            <class name="com.demoqa.tests.home.HomeTest" />
        </classes>
    </test>
    <test name="ChromeTestsMobileFirefox">
        <parameter name="browser" value="firefox" />
        <parameter name="deviceName" value="Nest Hub Max" />
        <classes>
            <class name="com.demoqa.tests.forms.FormsTest" />
            <class name="com.demoqa.tests.widgets.AccordianTest" />
        </classes>
    </test>
</suite>