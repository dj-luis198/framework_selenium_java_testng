<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelTests" parallel="classes" thread-count="3">
    <test name="ChromeTestsMobile">
        <parameter name="browser" value="chrome" />
        <parameter name="device" value="desktop" />
        <classes>
            <class name="com.demoqa.tests.home.HomeTest" />
            <class name="com.demoqa.tests.buttons.ButtonTest" />
        </classes>
    </test>
    <test name="ChromeTestsTablet">
        <parameter name="browser" value="chrome" />
        <parameter name="device" value="mobile" />
        <classes>
            <class name="com.demoqa.tests.home.HomeTest" />
            <class name="com.demoqa.tests.buttons.ButtonTest" />
        </classes>
    </test>
    <test name="ChromeTestsMobileFirefox">
        <parameter name="browser" value="firefox" />
        <parameter name="device" value="mobile" />        <classes>
            <class name="com.demoqa.tests.home.HomeTest" />
            <class name="com.demoqa.tests.buttons.ButtonTest" />
        </classes>
    </test>
</suite>